{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h2 class="m-3">Gestion des voitures</h2>

    <table class="table col-lg-4 col-md-6 col-11 m-4 p-3 shadow">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Marque</th>
                <th>Energie</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Année</th>
                <th>Kilomètre</th>
                <th>options</th>
                <th>images</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>                
                    {% for post in post.getBrands() %}
                        {{ post.name }}
                    {% endfor %}
                </td>
                <td>                
                    {% for post in post.getEnergies() %}
                        {{ post.name }}
                    {% endfor %}
                </td>
                <td>{{ post.description }}</td>
                <td>{{ post.price }}</td>
                <td>{{ post.year }}</td>
                <td>{{ post.kilometer }}</td>
                <td>{% for post in post.getOptions() %}
                        {{ post.name }}
                    {% endfor %}
                </td>
                <td>{% for post in post.getImages() %}
                        {{ post.name }}
                    {% endfor %}
                </td>

                <td>
                    <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-lg m-3" id="btn-connexion">Montrer</a>
                    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-lg m-3" id="btn-connexion">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_post_new') }}" class="btn btn-lg m-3" id="btn-connexion">Créer une voiture</a>
{% endblock %}
