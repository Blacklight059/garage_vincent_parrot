{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h2 class="m-3">Détail de la voiture</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ post.price }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ post.year }}</td>
            </tr>
            <tr>
                <th>Kilometer</th>
                <td>{{ post.kilometer }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}" class="btn btn-lg m-3" id="btn-connexion">Retour à la liste</a>

    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-lg m-3" id="btn-connexion">Editer</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
