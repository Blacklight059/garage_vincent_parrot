{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container-fluid">

        <div class="row">
            <div class="col-lg-12 mt-4">
                <h1 class="page-header">Nos prestations</h1>
            </div>
        </div>
        <div class="row justify-content-between align-items-stretch text-center text-lg-start p-3">

            {% for service in services %}  
                    <div id="main" class="col-lg-3 col-md-5 col-12 mb-4 text-center justify-content-center shadow">
                        <h2>{{ service.title }}</h2>
                        {% for image in service.images %}
                            <div class="col my-2">
                                <a href="#" class="d-block mb-4 h-100">
                                    <img src={{ asset('uploads/service/') ~ image.name }} class="img-fluid img-thumbnail active" style="width:100%" alt="service">
                                </a>
                            </div>
                        {% endfor %}
                            <div class="d-inline align-text-top">
                                <h5>Description</h5>
                                <p>{{ service.content }}</p>
                            </div>
                    </div>            
            {% endfor %}
        </div>
        <div class="row justify-content-between align-items-stretch text-center text-lg-start p-3">

            {% for review in reviews %}
                {% if(review.validate == true) %}
                    <div id="review" class="col-lg-3 col-md-5 col-12 mb-4 text-center justify-content-center shadow">
                        <h4>{{ review.pseudo }}</h4>
                        <div class="rating-container theme-krajee-fas rating-sm m-3">
                        {% for i in 1..review.rating %}
                            <span class="star">
                                <i id="show-star" class="fas fa-star"></i>
                            </span>
                        {% endfor %}
                        </div>
                            <div class="d-inline align-text-top">
                                <p>{{ review.content }}</p>
                            </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
</div>
{% endblock %}
