{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">

        <div class="row">
            <div class="col-lg-12 mt-4">
                <h1 class="page-header">Nos véhicules d'occasion</h1>
            </div>                    
            <div class="container-fluid">                
                <div class="row justify-content-between text-center text-lg-start m-4 p-3">

            {% for post in posts %}  
                    <div class="col-lg-4 col-md-5 col-12 shadow">
                        <h4 class="d-flex align-items-stretch">{{ post.title }}</h4>

                                <a href="#" class="d-block mb-4 h-50">
                                    <img src={{ asset('uploads/post/') ~ post.images[0].name }} class="img-fluid img-thumbnail active" style="width:100%" alt="service">
                                </a>
                            <div class="col">                            
                                <h5>Marque</h5>
                                <p>{{ brandName }}</p>
                            </div>
                            <div class="col">
                                <h5>Kilomètre</h5>
                                <p>{{ post.kilometer }} km</p>
                            </div>
                            <div class="col">
                                <h5>Prix</h5>
                                <p>{{ post.price }} €</p>
                            </div>   
                            <div class="nav-item {{ app.request.get('_route') == 'carDetail' }}">
                                <a class="nav-link" href="{{ path('carDetail', {'id': post.id}) }}">Voir plus</a>
                            </div>     
                    </div>                                                   
            {% endfor %}                
            </div>

            </div>

        </div>

</div>
{% endblock %}
