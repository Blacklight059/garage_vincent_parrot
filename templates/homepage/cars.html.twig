{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">

        <div class="row">
            <div class="col-lg-12 mt-4">
                <h1 class="page-header">Nos v√©hicules d'occasion</h1>
            </div>
        </div>
            {% for post in posts %}  
                    <div id="main" class="row text-center justify-content-center m-3">
                        <h2>{{ post.title }}</h2>
                        {% for image in post.images %}
                            <div class="col col-md-6 my-2">
                                <a href="#" class="d-block mb-4 h-100">
                                    <img src={{ asset('uploads/service/') ~ image.name }} class="img-fluid img-thumbnail active" style="width:100%" alt="service">
                                </a>
                            </div>
                        {% endfor %}                                
                        <h5>Marque</h5>
                        {% for brand in post.brands %}
                            <div class="col col-md-6 my-2">

                                <p>{{ brand.name }}</p>
                            </div>
                        {% endfor %}
                            <div class="d-inline align-text-top">
                                <h5>Description</h5>
                                <p>{{ post.description }}</p>
                            </div>
                    </div>
            {% endfor %}
</div>
{% endblock %}
