<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        {% block stylesheets %}
        {% endblock %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        {% block javascripts %}{% endblock %}
    </head>
    <body class="d-flex flex-column min-vh-100">
        <div class="col mainCenter">
            <header>
                <nav class="navbar navbar-expand-lg navbar-light" id="banner">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">
                            <img src={{asset('assets/img/logo.png')}} alt="logo" id="img-logo" class="img-fluid img-thumbnail active">
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse shadow align-self-end" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('Homepage') }}">Accueil</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('Show_cars') }}">Véhicules</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                                </li>
                            </ul>
                            <ul class="ms-auto navbar-nav">
                                {% if app.user %}
                                    <li class="nav-item">
                                        <span class="nav-link">Bienvenue {{ app.user.firstname }} {{ app.user.lastname }} !</span>
                                    </li>
                                    {% if( app.user.roles[0] == 'ROLE_ADMIN') %}
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('app_employee_index') }}">Gestion des employés
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('app_service_index') }}">Gestion des préstations
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('admin_hours') }}">Gestion des horaires</a>
                                        </li>
                                    {% endif %}
                                    {% if( app.user.roles[0] == 'ROLE_USER') %}
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('app_post_index') }}">Gestion des voitures d'occasion
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('admin_hours') }}">Gestion des horaires</a>
                                        </li>
                                    {% endif %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                                    </li>
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                                </li>
                            {% endif %}
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>
            {% block body %}{% endblock %}
            <footer>
                <div class="justify-content-center p-4" id="hours">
                    <div class="container">
                        <div class="row text-center align-items-baseline ">
                            <div class="d-inline col-lg-4 col-md-6 col-12">
                                <div class="fw-bolder">
                                    Horaires d'ouvertures :
                                </div>
                                <div class="openning-hours">
                                    {{ render(path('Show_hours')) }}
                                </div>
                            </div>
                            <div class="d-inline col-lg-4 col-md-6 col-12">
                                <div class="fw-bolder">
                                    Nous contacter :
                                </div>
                                <ul class="list-unstyled openning-hours">
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Fomulaire de contact</a>
                                    </li>
                                    <li class="nav-item">
                                        Téléphone : 03-XX-XX-XX-XX
                                    </li>                                
                                </ul>

                            </div>
                            <div class="d-inline col-lg-4 col-md-6 col-12">
                                <div class="fw-bolder">
                                    Mentions légales :
                                </div>
                                <ul class="list-unstyled openning-hours">
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Politiques de confidentialités</a>
                                    </li>                            
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </body>
</html>
